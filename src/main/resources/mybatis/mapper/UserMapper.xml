<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <!--根据id查找用户-->
    <select id="findUserById" resultType="com.example.demo.model.User">
        select * from t_user where id=#{id};
    </select>

    <!--查询所有用户-->
    <select id="findAllUser" resultType="com.example.demo.model.User">
        select * from t_user
    </select>

    <!--登录-->
    <select id="userLogin" resultType="com.example.demo.model.User">
        select * from t_user where username=#{username} and password=#{password};
    </select>

<!--注册添加-->
    <insert id="insertUser">
        insert into t_user
        (
          id,
          username,
          password,
          email,
          state,
          power,
          regtime,
          lasttime,
          headpic
        ) values
        (
          #{id},
          #{username},
          #{password},
          #{email},
          #{state},
          #{power},
          sysdate(),
          #{lasttime},
          #{headpic}
        );
    </insert>

    <!--修改用户信息-->
    <update id="updateUser">
        update t_user
        set
         headpic=#{headpic}
        ,userabout=#{userabout}
        ,sex=#{sex}
        ,birthday=#{birthday}
        where id=#{id}
    </update>

    <select id="findMyVideo" resultType="com.example.demo.model.Video">
        select * from video where scrid=#{id};
    </select>

    <delete id="deleteUser">
        delete  from t_user where id=#{id};
    </delete>

</mapper>